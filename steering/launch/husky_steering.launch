<launch>
    <arg name="hud" default="true"/>

    <group ns="steer">
        <node pkg="joy" type="joy_node" name="joy_node">
            <param name="default_trig_val" type="bool" value="true" />
            <!-- <param name="dev" type="str" value="/dev/input/js0" /> -->
        </node>
        
        <node pkg="steering" type="circadian.py" name="circadian">
            <param name="pulseRate" type="int" value="1000" />
        </node>

        <node pkg="steering" type="remapper.py" name="remapper">
            <param name="camTopic" type="str" value="/axis/image_raw/compressed" />
            <param name="rearCamTopic" type="str" value="/usb_cam/image_raw/compressed" />
        </node>

        <node pkg="steering" type="steering.py" name="steering">
            <param name="cmd_topic" type="str" value="/husky_velocity_controller/cmd_vel" />
            <param name="max_lin_vel" type="double" value="1.0" />
            <param name="max_rot_vel" type="double" value="0.2" />
        </node>

        <node pkg="steering" type="steerforce" name="steerforce">
            <param name="deviceName" type="str" value="/dev/input/event20" />
            <param name="timeStep" type="double" value="0.1" />
            <param name="tolerance" type="double" value="0.01" />
            <param name="maxTorque" type="double" value="0.5" />
            <param name="minTorque" type="double" value="0.25" />            
        </node>
    </group>

    <group if="$(arg hud)">
        <include file="$(find rosbridge_server)/launch/rosbridge_websocket.launch" />
    </group>

    <!-- <remap from="/axis/image_raw/compressed" to="/steer/cam_feed" /> -->
</launch>